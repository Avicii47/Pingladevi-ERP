
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/AdvBhande.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<body>
    <div class="container bootdey">
        <div class="row invoice row-printable">
            <div class="col-md-3">
                <!-- col-lg-6 start here -->
                <div class="panel panel-default plain" id="dash_0" style="margin-top: 10px;">
                    <!-- Start .panel -->
                    <div class="panel-body p30">
                        <div class="row">
                            <!-- Start .row -->
                            <div class="col-md-8">
                                <label id="hdnid" />
                                Name
                                <input id="TxtName" type="text" /><br>
                                Date<br>
                                <input type="date" id="TxtDate" /><br>
                                Mob
                                <input id="Txtmob" type="text" /><br>
                                Event Date
                                <input type="date" id="TxtEventDate" /><br>
                                City
                                <input id="Txtcity" type="text" /><br>
                                Items
                                <input id="TxtItem" type="text" /><br>
                                Rent
                                <input id="TxtRent" type="text" /><br>
                                Total
                                <input id="TxtTotal" type="text" /><br>
                                <center><input id="BtnSave" type="button" value="SAVE" onclick="savedata()" /></center>
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9" id="didID">
                        <div class="row invoice row-printable">
                                <div class="panel panel-default plain" id="dash_0">
                                    <!--Start .panel-->
                                    <div class="panel-body p30">
                                        <div class="row">
                                            <!--Start .row-->
                                            <div class="col-lg-2">
                                                <!--col-lg-4 start here-->
                                                <div class="invoice-logo">
                                                    <img src="~/Image/pingladevi.jpeg" alt="Invoice logo" width="100" />
                                                </div>
                                            </div>
                                            <!--col-lg-4 end here-->
                                            <div class="col-lg-10">
                                                <!--col-lg-8 start here-->
                                                <div class="row">
                                                    <center><h2 class="box-title" style="font-size:30px">पिंगळा देवी संस्थान (गढ ) </h2></center>
                                                    <center><h1 class="box-title" style="font-size:10px">नांदुरा पिंगळाई ता. जी अमरावती   रजि . नं.२४९७ </h1></center>
                                                    <center><h1 class="box-title" style="font-size:10px">www.pingladevi.org </h1></center>
                                                    <div class="col-sm-9"></div>
                                                    <div class="col-sm-3">
                                                        पावती क्र
                                                        <label id="TxtReciptNo" />
                                                    </div>
                                                </div>
                                            </div>
                                            <!--col-lg-8 end here-->
                                            <div class="col-lg-12">
                                                <!--col-lg-12 start here-->
                                                <div class="col-sm-12">
                                                    <div class="row" style="border:solid;" width="10%"></div>
                                                    <br>
                                                    <div class="row">
                                                        <div class="container-fluid">
                                                            <div class="col-sm-8">
                                                                दिनांक:-
                                                                <label id="TxtDate1" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="container-fluid">
                                                            <div class="col-lg-2">
                                                            नावं
                                                            <label id="TxtName1" /></div>
                                                         <div class="col-lg-5"></div>
                                                            <div class="col-lg-5">
                                                            गावं
                                                            <label id="Txtcity1" /></div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="container-fluid">
                                                            <div class="col-lg-3">
                                                            कार्यक्रमाची दिनांक 
                                                            <label id="TxtEventDate1" />
                                                            </div>
                                                            <div class="col-lg-4"></div>
                                                            <div class="col-lg-5">
                                                            मो.नं.
                                                            <label id="Txtmob1" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="line-items">
                                                        <div class="headers clearfix">
                                                            <div class="row">
                                                                @*<div class="col-sm-1">अ. क्र.</div>*@
                                                                <div class="col-sm-3">विवरण <br><label id="TxtItem1" /></div>
                                                                <div class="col-sm-3">भाडे<br><label id="TxtRent1" /></div>
                                                                <div class="col-sm-6">एकूण<br><label id="TxtTotal1" /> </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <center><button type="button" id="printButton" class="btn btn-primary hidden-print" onclick="printDiv('didID')"><span class="glyphicon glyphicon-print" aria-hidden="true"></span>Print</button></center>
                                                    <br>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="box-footer">
                                                                <div class="row" style="border:solid;" width="10%"></div><br>
                                                                <p class="text-left"><strong>नियम व अटी:-</strong></p>
                                                                १) बिछायत व भंडी कार्यालयाचेच घेणे आवश्यक राहील.<br>
                                                                २) आपल्या सामानाची जबाबदारी स्वतःची राहील.<br>
                                                                ३) सभागृहाचे भाडे पुर्ण भरल्याशिवाय सभागृहआत प्रवेश घेता येणार नाही.<br>
                                                                ४) बुकिंग करतेवेळी जमा केलेला अँडव्हान्स परत मिळणार नाही.<br>
                                                                ५) अँडव्हान्स पावती सोबत आणने गरजेचे आहे.<br>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-10"></div>
                                                            <div class="col-sm-2">
                                                                <center>सही</center>
                                                            </div>
                                                        </div>
                                                </div>
                                                <!--End .row-->
                                            </div>
                                        </div>
                                        <!--End .panel-->
                                    </div>
                                    <!--col-lg-12 end here-->
                                </div>
                        </div>
            </div>
        </div>
    </div>
            
        
    


    <script src="~/Assets/js/global.js"></script>
    <script language="javascript" type="text/javascript">
        function printDiv(didID) {
            var divElements = document.getElementById(didID).innerHTML;
            //Get the HTML of whole page
            var oldPage = document.body.innerHTML;
            //Reset the page's HTML with div's HTML only
            document.body.innerHTML =
                "<html><head><title></title></head><body>" +
                divElements + "</body>";
            window.print();
            recognition.onresult = function (event) {
                console.log(event);
                document.getElementById('printButton').value = event.results[0][0].transcript;
            }
            recognition.start();
            document.body.innerHTML = oldPage;
        }
    </script>
</body>
